{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>{% block title %}Projet2 Plateforme{% endblock %}</title>

  {% block stylesheets %}
    {# On charge le CSS de bootstrap depuis le site directement #}
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link href="{{ asset('css/layout.css') }}" rel="stylesheet">
  {% endblock %}
</head>

<body>
<br>
  <div class="container">
    <div id="header" class="jumbotron">
      <h1>Natation Synchronisée</h1><br>

      <p>
        <a class="btn btn-primary btn-lg" href="{{ path('Projet2_platform_home') }}">
          Accueil »
        </a>
        <a class="btn btn-primary btn-lg" href="{{ path('Projet2_platform_juges') }}">
          Connexion »
        </a>
        <a class="btn btn-primary btn-lg" href="{{ path('Projet2_platform_competitions') }}">
          Compétitions »
        </a>
        <a class="btn btn-primary btn-lg" href="{{ path('Projet2_platform_administration') }}">
          Administration »
        </a>
      </p>
    </div>

    <div class="row">
      <div id="menu" class="col-md-3">
        <h3>Compétitions en cours</h3>
        <ul class="nav nav-pills nav-stacked">
          <li><a href="">Compétition 10</a></li>
        </ul>

        <h4>Dernières compétitions</h4>
        {{ render(controller("Projet2PlatformBundle:Advert:menu", {'limit': 3})) }}
      </div>
      <div id="content" class="col-md-9">
        {% block body %}
        {% endblock %}
      </div>
    </div>

    <hr>

    <footer>
      <p>Fédération Française de Natation
        © {{ 'now'|date('Y') }} and beyond.</p>
    </footer>
  </div>

  {% block javascripts %}
    {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  {% endblock %}

</body>
</html>